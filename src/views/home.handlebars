<div>
    <p>Code: {{sessionCode}}</p>
</div>

<div hx-ext="ws" ws-connect="/ws">
    <ol id="groceries">
        {{#each groceryList}}
        {{>grocery_li}}
        {{/each}}
    </ol>
    <form id="groceries-form" ws-send hx-trigger="end from:body">
        <input type="hidden" name="ws_action" value="sort">
        <input type="hidden" id="sorted_name" name="sorted_name" value="">
        <input type="hidden" id="sorted_new_position" name="sorted_new_position" value="">
    </form>

    <form ws-send>
        <label for="name">Name</label>
        <input id="name" type="text" required="true" name="grocery_name" placeholder="Eggs">
        <input type="hidden" name="ws_action" value="add-grocery"/>
        <button>Add</button>
    </form>
</div>

<script src="/bundle.js"></script>